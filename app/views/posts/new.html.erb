<div class="row justify-content-center">
    <h1 class="display p-4">Create a new post</h1>
</div>

<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |err| %>
            <div class="alert alert-danger"><%= err %></div>
        <% end %>
    <% end %>
    <div class="bg-dark p-3 rounded">
        <form>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control", placeholder: 'Write your blog\'s title here' %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, class: "form-control", rows: 6,placeholder: 'Write your blog\'s text here' %>
            </div>
            <%= f.submit "Submit", class: "btn btn-primary" %>
        </form>
    </div>
<% end %>