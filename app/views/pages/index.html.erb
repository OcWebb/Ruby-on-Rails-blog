<div class="row justify-content-center">
    <h1 class="display p-4">All Posts</h1>
</div>


<% @posts.each do |post| %>
    <div class="card mb-3 bg-dark shadow-lg">
        <div class="card-body">
            <h5 class="card-title font-italic"> <%= post.title.capitalize %> </h5>
            <hr class="solid bg-light">
            <p class="card-text pl-4"> <%= post.body %> </p>
            <%= link_to "Read More", post_path(post), class: "card-link btn btn-light float-right" %>
        </div>
    </div>
<% end %>